<!-- Page Content -->
<div class="container-fluid" style="margin: 20px; padding: 30px">
    <h1 class="my-4 text-center">Welcome to Inventory Section</h1>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 mb-4">
            <div class="card h-100">
                <h4 class="card-header text-center">
                    <a style="float:left" role="button" class="btn btn-primary" href='/inventory/getAll'>View all Item</a> Inventory Table
                    <a style="float:right" role="button" class="btn btn-primary" href='/inventory/new'>New Item</a>
                </h4>
                <div class="card-body" style="height: 100%;">
                    <div class="row">
                        <form style="padding-left: 20px">
                            <div class="form-group">
                                <div class="form-row" id="myForm">
                                    <div class="col-sm-3">
                                        <select name="product" class="form-control itemname" id="productName">
                                                            <option value="0" disabled selected>Select your option</option>
                                                                        <% products.forEach(prod=>{ %>
                                                                        <option 
                                                                             data-price="<%=prod.price%>" data-name="<%=prod.name%>" value="<%=prod.price%>"> <%=prod.name%></option>
                                                                        <%})%>
                                                                    </select>
                                    </div>
                                    <div class="col-sm-2">
                                        <input class="rate form-control" value="000" id="productRate" required readonly>
                                    </div>
                                    <div class="col-sm-2">
                                        <input class="quantity form-control" value="0" min="1" max="100" type="number" required id="productQuantity" disabled>
                                    </div>
                                    <div class="col-sm-2">
                                        <input class="itemTotal form-control" value="0" required id="productTotal" readonly>
                                    </div>
                                    <div class="col-sm-2">
                                        <button style="float:right" form="myForm" class="btn btn-primary btn-row-adder" title="Add New Product Line" disabled>Add to List</button>
                                    </div>
                                </div>
                            </div>

                        </form>

                    </div>
                    <br>
                    <table class="table mainTable table-striped ">
                        <thead class="thead-dark">
                            <tr>
                                <th>Particulars</th>
                                <th>Rate</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="mainTableBody">

                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3">Total (Rs.)</td>
                                <td id="total">0</td>
                            </tr>
                            <tr>
                                <td colspan="3">Discount (Rs.)</td>
                                <td id="discount">0</td>
                            </tr>
                            <tr>
                                <td colspan="3">Grand Total (Rs.)</td>
                                <td id="grandTotal">0</td>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="checkBox" disabled>
                        <label class="custom-control-label" for="checkBox">Check this if You're Done</label>
                    </div>
                    <button class="btn btn-primary" id="btn-purchase-finish" disabled>Finish </button>
                </div>
            </div>

        </div>
        <div class="col-lg-5 col-md-5 col-sm-5">
            <div class="card h-100">
                <h4 class="card-header text-center">Console</h4>
                <div class="card-body">
                    <div id="console" class="box" style="overflow-y: scroll; height:300px;">
                        <% products.forEach(element=>{ %>
                            <P>
                                <%= element.name%> :
                                    <%= element.price%>
                            </P>
                            <% })%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container -->

<!-- Modal -->
<div class="modal fade" id="tableModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalLabel">Purchase Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
                <table class="table table-dark table-bordered invoice">
                    <thead>
                        <tr>
                            <th>S.N</th>
                            <th>Particulars</th>
                            <th>Rate</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4">Total (Rs.)</td>
                            <td id="billTotal"></td>
                        </tr>
                        <tr>
                            <td colspan="3">Discount (Rs.) </td>
                            <td id="billDiscount"></td>

                        </tr>
                        <tr>
                            <td colspan="4">Grand Total (Rs.)</td>
                            <td id="billGrandTotal"></td>
                        </tr>
                    </tfoot>
                </table>
                <div id="consoler" class="box" style="overflow-y: scroll; height:300px;"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Done</button>
                <button type="button" class="btn btn-primary">Continue Shopping<i class="printer"></i></button>
            </div>
        </div>
    </div>
</div>
<!-- ./Modal End -->
<script src="./../js/assign.js"></script>